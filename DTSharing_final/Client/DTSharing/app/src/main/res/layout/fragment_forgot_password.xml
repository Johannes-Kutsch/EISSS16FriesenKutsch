<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:cardView="http://schemas.android.com/apk/res-auto"
    tools:context="de.dtsharing.dtsharing.ForgotPasswordActivity"
    android:padding="8dp">

    <android.support.v7.widget.CardView
        android:id="@+id/cvContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        cardView:cardCornerRadius="2dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="8dp">

            <EditText
                android:id="@+id/etMail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/mail"
                android:textAlignment="center"
                android:inputType="textEmailAddress"
                android:singleLine="true"
                android:theme="@style/AppTheme.Base" />

            <TextView
                android:layout_marginTop="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/descForgotPassword"
                android:layout_below="@id/etMail"
                android:textAlignment="center"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <Button
        android:id="@+id/bSubmit"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@id/cvContainer"
        android:layout_marginTop="16dp"
        android:text="LINK ANFORDERN"
        android:textSize="16sp"
        android:textColor="#fff"
        android:background="@drawable/button_primary_style"/>

</RelativeLayout>
