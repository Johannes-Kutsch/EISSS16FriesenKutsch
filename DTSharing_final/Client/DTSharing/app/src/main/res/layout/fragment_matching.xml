<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:cardView="http://schemas.android.com/apk/res-auto"
    tools:context="de.dtsharing.dtsharing.MatchingActivity"
    android:padding="8dp">

    <android.support.v7.widget.CardView
        android:id="@+id/cvContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        cardView:cardCornerRadius="2dp">
        <ListView
            android:id="@+id/lvMatches"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@drawable/list_divider_chats"
            android:dividerHeight="1dp"
            android:scrollbars="none">

        </ListView>
    </android.support.v7.widget.CardView>

    <Button
        android:id="@+id/bSubmit"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@id/cvContainer"
        android:layout_marginTop="16dp"
        android:text="EINTRAGEN"
        android:textSize="16sp"
        android:textColor="#fff"
        android:background="@drawable/button_primary_style"/>

</RelativeLayout>
