<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="de.dtsharing.dtsharing.MatchingActivity"
    tools:showIn="@layout/activity_matching">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/matchingDesc"
                    android:singleLine="false"
                    android:textStyle="italic"
                    android:textSize="13dp"
                    android:layout_weight="1"
                    android:layout_gravity="center" />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Eintragen"
                    android:id="@+id/bSubmit"
                    android:textColor="@color/colorWhite"
                    android:background="@drawable/button_primary_style"
                    android:layout_gravity="center" />
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <ListView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lvQuerys"
            android:layout_gravity="center_horizontal|top"/>

    </LinearLayout>

</RelativeLayout>
